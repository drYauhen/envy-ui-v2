{
  "name": "envy-ui-v2",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "check:zone": "find . -name '*:Zone.Identifier'",
    "clean:zone": "find . -name '*:Zone.Identifier' -delete",
    "clean:zip": "rm -f envy-ui-v2-*.zip",
    "clean:repo": "npm run clean:zone && npm run clean:zip",
    "tokens:build": "style-dictionary build --config style-dictionary/config.js",
    "tokens:build:tokenstudio": "style-dictionary build --config style-dictionary/config.js --platform tokenstudio",
    "support:zip:full": "git ls-files --cached --others --exclude-standard | zip envy-ui-v2-support.zip -@",
    "support:zip:dirty": "git status --porcelain | awk '{print $2}' | zip envy-ui-v2-dirty.zip -@",
    "export:raw-links": "node scripts/export-raw-links.js",
    "bootstrap:zip": "zip -r envy-ui-v2-bootstrap.zip tokens style-dictionary contracts packages/tsx/button stories docs/adr system.manifest.json system.meta.json WORKFLOW_MANIFEST.md NEXT_STEP.md package.json",
    "storybook": "npm run tokens:build && storybook dev -p 6006",
    "build-storybook": "npm run storybook:build",
    "storybook:build": "npm run tokens:build && storybook build",
    "figma:build": "esbuild figma-plugin/code.ts --bundle --format=iife --platform=browser --target=es2017 --outfile=figma-plugin/dist/code.js --loader:.html=text --loader:.json=json"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@figma/plugin-typings": "^1.121.0",
    "@storybook/addon-a11y": "^10.1.9",
    "@storybook/addon-docs": "^10.1.9",
    "@storybook/react-vite": "^10.1.9",
    "@types/node": "^25.0.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "esbuild": "^0.27.1",
    "ignore": "^7.0.5",
    "storybook": "^10.1.9",
    "style-dictionary": "^5.1.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "react": "^19.2.3",
    "react-aria": "^3.45.0",
    "react-dom": "^19.2.3",
    "react-stately": "^3.43.0"
  }
}
