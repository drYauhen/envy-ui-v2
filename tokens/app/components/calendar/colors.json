{
  "eui": {
    "calendar": {
      "colors": {
        "background": {
          "$value": "{eui.color.neutral.white}",
          "$type": "color",
          "$description": "Calendar container background color."
        },
        "header": {
          "background": {
            "$value": "{eui.color.neutral.white}",
            "$type": "color",
            "$description": "Calendar header (month/year navigation) background color."
          },
          "text": {
            "$value": "{eui.color.text.primary}",
            "$type": "color",
            "$description": "Calendar header text color."
          },
          "button": {
            "text": {
              "$value": "{eui.color.text.primary}",
              "$type": "color",
              "$description": "Calendar header navigation button text color."
            },
            "hover": {
              "background": {
                "$value": "{eui.color.neutral.100}",
                "$type": "color",
                "$description": "Calendar header navigation button hover background."
              }
            }
          }
        },
        "weekday": {
          "text": {
            "$value": "{eui.color.text.subtle}",
            "$type": "color",
            "$description": "Weekday labels (Mon, Tue, etc.) text color."
          }
        },
        "day": {
          "background": {
            "default": {
              "$value": "{eui.color.neutral.white}",
              "$type": "color",
              "$description": "Default day cell background color."
            },
            "hover": {
              "$value": "{eui.color.neutral.100}",
              "$type": "color",
              "$description": "Day cell hover background color (light-gray equivalent)."
            },
            "selected": {
              "$value": "{eui.color.accent.700}",
              "$type": "color",
              "$description": "Selected day background color (matches accent button - accent.700)."
            },
            "selectedHover": {
              "$value": "{eui.color.accent.700}",
              "$type": "color",
              "$description": "Selected day hover background color (matches accent button hover - same as base)."
            },
            "active": {
              "$value": "{eui.color.accent.50}",
              "$type": "color",
              "$description": "Day cell active/pressed background color (pale-blue equivalent)."
            },
            "today": {
              "$value": "{eui.color.neutral.white}",
              "$type": "color",
              "$description": "Today's date background color."
            },
            "disabled": {
              "$value": "{eui.color.neutral.white}",
              "$type": "color",
              "$description": "Disabled day background color."
            },
            "outsideMonth": {
              "$value": "{eui.color.neutral.50}",
              "$type": "color",
              "$description": "Days outside current month background color (gallery equivalent)."
            }
          },
          "text": {
            "default": {
              "$value": "{eui.color.text.primary}",
              "$type": "color",
              "$description": "Default day text color."
            },
            "selected": {
              "$value": "{eui.color.neutral.white}",
              "$type": "color",
              "$description": "Selected day text color (white)."
            },
            "disabled": {
              "$value": "{eui.color.neutral.400}",
              "$type": "color",
              "$description": "Disabled day text color."
            },
            "outsideMonth": {
              "$value": "{eui.color.text.subtle}",
              "$type": "color",
              "$description": "Days outside current month text color."
            },
            "today": {
              "$value": "{eui.color.text.primary}",
              "$type": "color",
              "$description": "Today's date text color."
            }
          },
          "border": {
            "default": {
              "$value": "{eui.color.border.subtle}",
              "$type": "color",
              "$description": "Day cell border color."
            },
            "selected": {
              "$value": "{eui.color.accent.700}",
              "$type": "color",
              "$description": "Selected day border color (matches accent button - accent.700)."
            }
          }
        },
        "range": {
          "background": {
            "$value": "{eui.color.accent.50}",
            "$type": "color",
            "$description": "Date range background color (for range selection)."
          },
          "text": {
            "$value": "{eui.color.text.primary}",
            "$type": "color",
            "$description": "Date range text color."
          }
        }
      }
    }
  }
}

