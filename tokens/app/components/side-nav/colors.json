{
  "eui": {
    "side-nav": {
      "colors": {
        "background": {
          "$value": "{eui.color.brand.primary}",
          "$type": "color",
          "$description": "Side navigation background color. Brand primary for brand identity."
        },
        "border": {
          "$value": "{eui.color.brand.primary}",
          "$type": "color",
          "$description": "Side navigation border color."
        },
        "item": {
          "background": {
            "default": {
              "$value": "transparent",
              "$type": "color",
              "$description": "Default navigation item background."
            },
            "hover": {
              "$value": "{eui.color.brand.700}",
              "$type": "color",
              "$description": "Navigation item background on hover - more prominent."
            },
            "active": {
              "$value": "{eui.color.brand.600}",
              "$type": "color",
              "$description": "Active navigation item background."
            },
            "selected": {
              "$value": "{eui.color.brand.600}",
              "$type": "color",
              "$description": "Selected navigation item background."
            },
            "focus": {
              "$value": "transparent",
              "$type": "color",
              "$description": "Navigation item background on focus."
            },
            "disabled": {
              "$value": "transparent",
              "$type": "color",
              "$description": "Disabled navigation item background."
            }
          },
          "text": {
            "default": {
              "$value": "{eui.color.text.inverse}",
              "$type": "color",
              "$description": "Default navigation item text color."
            },
            "hover": {
              "$value": "{eui.color.text.inverse}",
              "$type": "color",
              "$description": "Navigation item text color on hover."
            },
            "active": {
              "$value": "{eui.color.text.inverse}",
              "$type": "color",
              "$description": "Active navigation item text color."
            },
            "selected": {
              "$value": "{eui.color.brand.100}",
              "$type": "color",
              "$description": "Selected navigation item text color - accent color for better visibility."
            },
            "disabled": {
              "$value": "{eui.color.text.disabled}",
              "$type": "color",
              "$description": "Disabled navigation item text color."
            }
          },
          "indicator": {
            "active": {
              "$value": "{eui.color.brand.200}",
              "$type": "color",
              "$description": "Active indicator color (left border or accent)."
            },
            "selected": {
              "$value": "{eui.color.brand.300}",
              "$type": "color",
              "$description": "Selected indicator color - accent color for better visibility."
            }
          },
          "badge": {
            "background": {
              "$value": "{eui.color.brand.200}",
              "$type": "color",
              "$description": "Badge background color."
            },
            "text": {
              "$value": "{eui.color.brand.900}",
              "$type": "color",
              "$description": "Badge text color."
            }
          }
        },
        "section": {
          "title": {
            "text": {
              "$value": "{eui.color.text.inverse}",
              "$type": "color",
              "$description": "Section title text color."
            }
          }
        },
        "separator": {
          "$value": "{eui.color.border.subtle}",
          "$type": "color",
          "$description": "Separator color between sections."
        },
        "header": {
          "border": {
            "$value": "{eui.color.brand.300}",
            "$type": "color",
            "$description": "Header border color (between header and content) - brand color for subtle appearance."
          }
        },
        "footer": {
          "border": {
            "$value": "{eui.color.brand.300}",
            "$type": "color",
            "$description": "Footer border color (between content and footer) - brand color for subtle appearance."
          }
        },
        "toggle": {
          "border": {
            "$value": "{eui.color.brand.200}",
            "$type": "color",
            "$description": "Toggle button border color - brand color for subtle appearance."
          }
        },
        "tooltip": {
          "background": {
            "$value": "{eui.color.neutral.900}",
            "$type": "color",
            "$description": "Tooltip background color (shown in collapsed state)."
          },
          "text": {
            "$value": "{eui.color.text.inverse}",
            "$type": "color",
            "$description": "Tooltip text color."
          }
        }
      }
    }
  }
}
