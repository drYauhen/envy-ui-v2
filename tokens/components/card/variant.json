{
  "eui": {
    "card": {
      "variant": {
        "elevated": {
          "shadow": {
            "$value": "{eui.shadow.default}",
            "$type": "boxShadow",
            "$description": "Standard elevation shadow for cards. Default variant."
          },
          "border": {
            "width": {
              "$value": "1px",
              "$type": "dimension"
            },
            "style": {
              "$value": "solid",
              "$type": "string"
            },
            "color": {
              "$value": "{eui.color.border.default}",
              "$type": "color"
            }
          },
          "background": {
            "$value": "{eui.color.background.surface}",
            "$type": "color"
          },
          "radius": {
            "$value": "{eui.radius.large}",
            "$type": "dimension",
            "$description": "Card radius uses large radius for visual hierarchy above control elements. In default theme (8px), in accessibility theme (10px). Cards, panels, and containers use this level to distinguish from buttons and inputs."
          }
        },
